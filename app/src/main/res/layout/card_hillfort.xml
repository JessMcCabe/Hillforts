<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/change_hillfort_image1" />


        <ImageView
            android:id="@+id/imageIcon2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/hillfortTitle"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-24dp"
            android:layout_marginLeft="150dp"
            android:contentDescription="@string/change_hillfort_image2" />

        <ImageView
            android:id="@+id/imageIcon3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/hillfortTitle"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-24dp"
            android:layout_marginLeft="150dp"
            android:contentDescription="@string/change_hillfort_image3" />

        <ImageView
            android:id="@+id/imageIcon4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/hillfortTitle"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-24dp"
            android:layout_marginLeft="150dp"
            android:contentDescription="@string/change_hillfort_image4" />


        <TextView
            android:id="@+id/hillfortTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageIcon"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortTitle"
            android:layout_toEndOf="@+id/imageIcon"/>/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>